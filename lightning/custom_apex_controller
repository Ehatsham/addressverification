public class VerifyAddressCustomComponentController{
    @AuraEnabled
    public static String getcallVerifyAddress(String sTable,Id recId){
        try{
            String error = smartystreets.AddressUpdateService.UpdateAddress_v2(sTable,recId);
            return error;
        }catch(exception e){
            return e.getmessage();
        }
    }
    @AuraEnabled
    public static smartystreets__Office__c getOffice(Id OffcId){
        smartystreets__Office__c offc = [SELECT Id,smartystreets__Street__c,smartystreets__State__c,smartystreets__City__c,smartystreets__Zip__c,
                            smartystreets__Country__c,smartystreets__Address_Verified__c from smartystreets__Office__c where id =:OffcId];
        return offc;
    }   
}
